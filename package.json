{
  "name": "checkers-game-typescript",
  "version": "1.0.0",
  "description": "A checkers game based on Phaser 3 and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "build:css": "tailwindcss -i ./src/css/index.css -o ./dist/css/output.css",
    "watch:css": "tailwindcss -i ./src/css/index.css -o ./dist/css/output.css --watch",
    "dev": "concurrently --kill-others-on-fail \"npm run watch:css\" \"vite\"",
    "build": "concurrently --kill-others-on-fail \"npm run build:css\" \"vite build\"",
    "serve": "vite preview"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keshix/checkers-game.git"
  },
  "author": "Jan Uhlmann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/keshix/checkers-game/issues"
  },
  "homepage": "https://github.com/keshix/checkers-game#readme",
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@types/node": "^14.14.27",
    "concurrently": "^7.0.0",
    "phaser": "^3.52.0",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.1.3",
    "vite": "^2.0.0-beta.65"
  }
}
